{
  "title": "Model Pipeline - Drift Detection",
  "description": "Detailed view of data and model drift indicators with feature-level analysis",
  "widgets": [
    {
      "id": 1,
      "definition": {
        "title": "Data Drift Overview",
        "title_size": "16",
        "title_align": "left",
        "type": "group",
        "layout_type": "ordered",
        "widgets": [
          {
            "id": 2,
            "definition": {
              "title": "PSI Score by Feature",
              "title_size": "16",
              "title_align": "left",
              "type": "heatmap",
              "requests": [
                {
                  "q": "avg:model_pipeline.data_drift_psi{$model_version,$environment} by {feature}"
                }
              ],
              "yaxis": {
                "include_zero": true
              }
            },
            "layout": {
              "x": 0,
              "y": 0,
              "width": 6,
              "height": 3
            }
          },
          {
            "id": 3,
            "definition": {
              "title": "KS Statistic by Feature",
              "title_size": "16",
              "title_align": "left",
              "type": "heatmap",
              "requests": [
                {
                  "q": "avg:model_pipeline.data_drift_ks{$model_version,$environment} by {feature}"
                }
              ],
              "yaxis": {
                "include_zero": true
              }
            },
            "layout": {
              "x": 6,
              "y": 0,
              "width": 6,
              "height": 3
            }
          }
        ]
      },
      "layout": {
        "x": 0,
        "y": 0,
        "width": 12,
        "height": 4
      }
    },
    {
      "id": 4,
      "definition": {
        "title": "Feature Distribution Changes",
        "title_size": "16",
        "title_align": "left",
        "type": "group",
        "layout_type": "ordered",
        "widgets": [
          {
            "id": 5,
            "definition": {
              "title": "Top Drifting Features",
              "title_size": "16",
              "title_align": "left",
              "type": "toplist",
              "requests": [
                {
                  "q": "top(avg:model_pipeline.data_drift_score{$model_version,$environment} by {feature}, 10, 'mean', 'desc')"
                }
              ]
            },
            "layout": {
              "x": 0,
              "y": 0,
              "width": 4,
              "height": 3
            }
          },
          {
            "id": 6,
            "definition": {
              "title": "Feature Mean Shift",
              "title_size": "16",
              "title_align": "left",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:model_pipeline.feature_mean{$model_version,$environment,feature:$feature}",
                  "display_type": "line",
                  "style": {
                    "palette": "dog_classic",
                    "line_type": "solid",
                    "line_width": "normal"
                  }
                }
              ]
            },
            "layout": {
              "x": 4,
              "y": 0,
              "width": 4,
              "height": 3
            }
          },
          {
            "id": 7,
            "definition": {
              "title": "Feature Std Dev Change",
              "title_size": "16",
              "title_align": "left",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:model_pipeline.feature_std{$model_version,$environment,feature:$feature}",
                  "display_type": "line",
                  "style": {
                    "palette": "warm",
                    "line_type": "solid",
                    "line_width": "normal"
                  }
                }
              ]
            },
            "layout": {
              "x": 8,
              "y": 0,
              "width": 4,
              "height": 3
            }
          }
        ]
      },
      "layout": {
        "x": 0,
        "y": 4,
        "width": 12,
        "height": 4
      }
    },
    {
      "id": 8,
      "definition": {
        "title": "Model Drift Indicators",
        "title_size": "16",
        "title_align": "left",
        "type": "group",
        "layout_type": "ordered",
        "widgets": [
          {
            "id": 9,
            "definition": {
              "title": "Performance Degradation Timeline",
              "title_size": "16",
              "title_align": "left",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:model_pipeline.model_drift_performance_degradation{$model_version,$environment}",
                  "display_type": "line",
                  "style": {
                    "palette": "dog_classic",
                    "line_type": "solid",
                    "line_width": "thick"
                  }
                }
              ],
              "yaxis": {
                "min": "0",
                "max": "1"
              },
              "markers": [
                {
                  "value": "y = 0.1",
                  "display_type": "warning dashed",
                  "label": "Warning Threshold"
                },
                {
                  "value": "y = 0.2",
                  "display_type": "error dashed",
                  "label": "Critical Threshold"
                }
              ]
            },
            "layout": {
              "x": 0,
              "y": 0,
              "width": 6,
              "height": 3
            }
          },
          {
            "id": 10,
            "definition": {
              "title": "Prediction Confidence Distribution",
              "title_size": "16",
              "title_align": "left",
              "type": "distribution",
              "requests": [
                {
                  "q": "avg:model_pipeline.prediction_confidence{$model_version,$environment}",
                  "style": {
                    "palette": "cool"
                  }
                }
              ]
            },
            "layout": {
              "x": 6,
              "y": 0,
              "width": 6,
              "height": 3
            }
          }
        ]
      },
      "layout": {
        "x": 0,
        "y": 8,
        "width": 12,
        "height": 4
      }
    },
    {
      "id": 11,
      "definition": {
        "title": "Drift Detection Alerts",
        "title_size": "16",
        "title_align": "left",
        "type": "group",
        "layout_type": "ordered",
        "widgets": [
          {
            "id": 12,
            "definition": {
              "title": "Recent Drift Events",
              "title_size": "16",
              "title_align": "left",
              "type": "event_timeline",
              "query": "event_type:(data_drift_detected OR model_drift_detected)",
              "tags_execution": "and"
            },
            "layout": {
              "x": 0,
              "y": 0,
              "width": 12,
              "height": 2
            }
          },
          {
            "id": 13,
            "definition": {
              "title": "Drift Alert Summary",
              "title_size": "16",
              "title_align": "left",
              "type": "alert_value",
              "alert_id": "model_pipeline_drift_monitor",
              "precision": 0,
              "unit": "alerts",
              "text_align": "center"
            },
            "layout": {
              "x": 0,
              "y": 2,
              "width": 3,
              "height": 2
            }
          },
          {
            "id": 14,
            "definition": {
              "title": "Features with Active Drift",
              "title_size": "16",
              "title_align": "left",
              "type": "check_status",
              "check": "model_pipeline.drift_check",
              "grouping": "cluster",
              "group_by": ["feature"],
              "tags": ["$model_version", "$environment"]
            },
            "layout": {
              "x": 3,
              "y": 2,
              "width": 9,
              "height": 2
            }
          }
        ]
      },
      "layout": {
        "x": 0,
        "y": 12,
        "width": 12,
        "height": 5
      }
    },
    {
      "id": 15,
      "definition": {
        "title": "Statistical Tests Results",
        "title_size": "16",
        "title_align": "left",
        "type": "group",
        "layout_type": "ordered",
        "widgets": [
          {
            "id": 16,
            "definition": {
              "title": "Chi-Squared Test P-Values",
              "title_size": "16",
              "title_align": "left",
              "type": "table",
              "requests": [
                {
                  "q": "avg:model_pipeline.chi2_pvalue{$model_version,$environment} by {feature}",
                  "aggregator": "last",
                  "conditional_formats": [
                    {
                      "comparator": "<",
                      "value": 0.05,
                      "palette": "white_on_red"
                    },
                    {
                      "comparator": "<",
                      "value": 0.1,
                      "palette": "white_on_yellow"
                    },
                    {
                      "comparator": ">=",
                      "value": 0.1,
                      "palette": "white_on_green"
                    }
                  ]
                }
              ]
            },
            "layout": {
              "x": 0,
              "y": 0,
              "width": 6,
              "height": 3
            }
          },
          {
            "id": 17,
            "definition": {
              "title": "Drift Score Trends",
              "title_size": "16",
              "title_align": "left",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:model_pipeline.overall_drift_score{$model_version,$environment}",
                  "display_type": "line",
                  "style": {
                    "palette": "purple",
                    "line_type": "solid",
                    "line_width": "thick"
                  },
                  "metadata": [
                    {
                      "expression": "avg:model_pipeline.overall_drift_score{$model_version,$environment}",
                      "alias": "Overall Drift Score"
                    }
                  ]
                }
              ],
              "yaxis": {
                "min": "0",
                "max": "1"
              }
            },
            "layout": {
              "x": 6,
              "y": 0,
              "width": 6,
              "height": 3
            }
          }
        ]
      },
      "layout": {
        "x": 0,
        "y": 17,
        "width": 12,
        "height": 4
      }
    }
  ],
  "template_variables": [
    {
      "name": "model_version",
      "default": "*",
      "prefix": "model_version"
    },
    {
      "name": "environment",
      "default": "production",
      "prefix": "environment"
    },
    {
      "name": "feature",
      "default": "*",
      "prefix": "feature"
    }
  ],
  "layout_type": "ordered",
  "is_read_only": false,
  "notify_list": [],
  "reflow_type": "fixed"
}